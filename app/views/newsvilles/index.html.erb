<p id="notice"><%= notice %></p>

<h1>Newsville</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Original Article</th>
      <th>Title</th>
      <th>Summary</th>
      <th>Posted at</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @newsvilles.each do |newsville| %>
      <tr>
        <td><%= link_to "Original Story", newsville.title_url, :target => '_blank' %></td>
        <td><%= newsville.title %></td>
        <td><%= newsville.body %></td>
        <td><%= newsville.time %></td>
        <% if newsville.image_url.present? %>
        <td><%= image_tag newsville.image_url %></td>
        <% else %>
        <td><%= image_tag 'nia.jpg' %></td>
        <% end %>
        <td><%= link_to 'Show', newsville, class: "btn btn-success btn-sm" %></td>
        <td><%= link_to 'Edit', edit_newsville_path(newsville), class: "btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Destroy', newsville, method: :delete,
        data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

