<p id="notice"><%= notice %></p>

<p>
  <strong>Link to:</strong>
  <%= link_to "Original Story", @newsville.title_url, :target => '_blank' %>
</p>

<p>
  <strong>Headline:</strong>
  <%= @newsville.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @newsville.body %>
</p>

<p>
  <strong>Posted</strong>
  <%= time_ago_in_words(@newsville.created_at) %> ago
</p>

<p>
  <strong>Image url:</strong>
  <%= @newsville.image_url %>
</p>



<hr>

<%= render @newsville.comments %>
  <%= simple_form_for [@newsville, Comment.new] do |comment| %>
  <%= comment.input :body %>
  <%= comment.submit "Add Comment", class: "btn btn-danger" %>
<% end %>
<hr>
<%= link_to 'Back to Newsvilles', newsvilles_path, class: "btn btn-info btn-sm" %>

    
    